{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Average IQ Internationally (2022)",
  "width": 800,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/iankohjinhao/3179/main/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/iankohjinhao/3179/main/International_IQ.csv"
            },
            "key": "Country",
            "fields": ["Average IQ"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Average IQ",
          "type": "quantitative",
          "scale": {"type": "log", "domain": [80, 110], "nice": false},
          "title": "IQ Range"
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Average IQ", "type": "quantitative", "title": "Average IQ"}
        ]
      }
    }
  ],
  "config": {}
}